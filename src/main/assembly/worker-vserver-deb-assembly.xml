<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0 http://maven.apache.org/xsd/assembly-1.1.0.xsd">
  <id>worker-vserver-deb</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  
  <files>
    <file>
    	<source>deployer/deb/worker/worker.properties</source>
    	<outputDirectory>/etc/ourgrid/worker-vserver1</outputDirectory>
    	<fileMode>755</fileMode>
    </file>
    <file>
    	<source>deployer/deb/worker-vserver/worker-core</source>
    	<outputDirectory>/etc/ourgrid/bin</outputDirectory>
    	<fileMode>755</fileMode>
    </file>
    <file>
    	<source>deployer/deb/worker/worker</source>
    	<outputDirectory>/usr/bin</outputDirectory>
    	<fileMode>755</fileMode>
    </file>
	<file>
    	<source>deployer/deb/worker-vserver/control/copyworkers-vserver</source>
    	<outputDirectory>/usr/bin</outputDirectory>
    	<fileMode>755</fileMode>
    </file>
    <file>
    	<source>deployer/deb/worker-vserver/log4j.cfg.xml</source>
    	<outputDirectory>/etc/ourgrid/worker-vserver1</outputDirectory>
    </file>
    <file>
    	<source>deployer/deb/worker/worker.spec.properties</source>
    	<outputDirectory>/etc/ourgrid/worker-vserver1</outputDirectory>
    </file>
    <file>
    	<source>deployer/deb/worker-vserver/default/worker-vserver</source>
    	<outputDirectory>/etc/default</outputDirectory>
    </file>
    <file>
    	<source>deployer/deb/worker-vserver/init.d/worker-vserver</source>
    	<outputDirectory>/etc/init.d</outputDirectory>
    </file>
    <file>
    	<source>deployer/deb/worker/destroyVM</source>
    	<outputDirectory>/usr/bin</outputDirectory>
    	<fileMode>755</fileMode>
    </file>
    <file>
    	<source>deployer/deb/worker/deleteWorkerVMs</source>
    	<outputDirectory>/usr/bin</outputDirectory>
    	<fileMode>755</fileMode>
    </file>
    <file>
    	<source>deployer/deb/worker/ourvirt</source>
    	<outputDirectory>/usr/bin</outputDirectory>
    	<fileMode>755</fileMode>
    </file>
  </files>
  
  <fileSets>
  	<fileSet>
  		<outputDirectory>/usr/share/ourgrid</outputDirectory>
  		<directory>deployer/deb/worker-vserver/share</directory>
  		<excludes>
  			<exclude>*</exclude>
  		</excludes>
  	</fileSet>
  </fileSets>
</assembly>
